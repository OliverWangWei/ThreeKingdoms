<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/user1"
        android:orientation="horizontal"
        android:background="#20B2AA">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user1_imag"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="5"
            android:src="@drawable/lvbu"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/user1_text"
            android:layout_weight="5"
            android:padding="20dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#B0C4DE"
            android:text="吕布\n武力：100\n智力：50\n统率：70\n军队：50000\n粮草：600"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/user2"
        android:orientation="horizontal"
        android:background="#CD5555"
        app:layout_constraintTop_toBottomOf="@+id/user1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/user2_text"
            android:layout_weight="5"
            android:padding="20dp"
            android:textSize="18sp"
            android:background="#B0C4DE"
            android:textColor="#ffffff"
            android:text="关羽\n武力：95\n智力：80\n统率：85\n军队：30000\n粮草：400"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/user2_imag"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="5"
            android:src="@drawable/guanyu"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/battle_btn"
        android:background="#008B8B"
        android:text="开始对决"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/user2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>





</android.support.constraint.ConstraintLayout>