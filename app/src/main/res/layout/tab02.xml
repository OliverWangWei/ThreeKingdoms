<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/user1"
        android:orientation="horizontal"
        android:background="#6495ED">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user1_imag"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"

            android:src="@mipmap/ic_person_add_blue_grey_800_36dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/user1_text"
            android:layout_weight="5"
            android:padding="20dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#B0C4DE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/user2"
        android:orientation="horizontal"
        android:background="#FF6A6A"
        app:layout_constraintTop_toBottomOf="@+id/user1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/user2_text"
            android:layout_weight="5"
            android:padding="20dp"
            android:textSize="18sp"
            android:background="#FFA07A"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user2_imag"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:src="@mipmap/ic_person_add_blue_grey_800_36dp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/battle_btn"
        android:background="#008B8B"
        android:text="开始对决"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/user2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>